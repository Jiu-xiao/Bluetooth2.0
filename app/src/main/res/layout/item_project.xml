<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/radius_4dp_corner_white_background">

    <TextView
        android:id="@+id/project_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/icon_project"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:padding="10dp"
        android:text="WideMouth\n创建于2020.5.21" />

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bottom_radius_background"
        app:srcCompat="@drawable/round" />
</LinearLayout>
