<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="QMUI.BaseDialog">
        <item name="android:backgroundDimAmount">?attr/qmui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="qmui_skin_support_dialog_edit_text_color">@color/black</item>
        <item name="qmui_skin_support_dialog_title_text_color">@color/black</item>
        <item name="qmui_skin_support_dialog_action_text_color">@color/black</item>
        <item name="qmui_skin_support_dialog_positive_action_text_color">@color/orange_100</item>
        <item name="qmui_skin_support_dialog_negative_action_text_color">
            ?attr/qmui_config_color_red
        </item>
    </style>

</resources>
